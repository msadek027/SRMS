                            if (data[i].dirty) {
                                if (data[i].ItemSlNo == "") {
                                    checkGridData = 0;
                                    break;
                                }
                                itemData.ID = data[i].ID;
                                itemData.ItemSlNo = data[i].ItemSlNo;
                                itemData.ItemName = data[i].ItemName;
                                itemData.ItemQty = data[i].ItemQty;
                                model.NocDetail.push(itemData);
                                itemData = { "ID": "", "ItemSlNo": "", "ItemName": "", "ItemQty": "" };
                            }
                        }
                    }
                    $.ajax({
                        url: '@Url.Action("frmNocInfo", "NocInfo")',
