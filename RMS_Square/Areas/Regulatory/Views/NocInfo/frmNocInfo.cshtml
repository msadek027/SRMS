                    model.ProposedBy = $('#ProposedBy').val();
                    model.ProposedDepartment = $('#ProposedDepartment').val();

                    var dataSource = $("#DetailGrid").data("kendoGrid").dataSource;
                    var data = dataSource.data(); // Get Detail Grid Data
