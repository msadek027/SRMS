
@{
    //ViewBag.Title = "frmProductPrice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
<link href="~/Content/CSS/InputText.css" rel="stylesheet" />
<div class="box-header with-border">
    @*Form Title*@
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4"> <div id="MessageText"></div></div>
    <div class="col-xs-0 col-sm-0 col-md-8 col-lg-8">
        <div style="text-align:right;">
            <button id="btnSave" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-save"></i>Save</button>
            <button id="btnView" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-search"></i>Search</button>
            @* <button id="btnDelete" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-trash"></i>Delete</button>*@
            <button id="btnReset" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-refresh"></i>Reset</button>
        </div>
    </div>
</div>
<div class="box-body">
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">Annexure No<span style="color: red">*</span> :</div>
            <div class="col-sm-2"><input type="text" id="AnnexureNo" name="AnnexureNo" class="form-control" placeholder="Get from Find" readonly /></div>
            <input type="hidden" id="AnnexId" name="AnnexId" class="txtBox" />
            <input type="hidden" id="ID" name="ID" class="txtBox" />
            <div class="col-sm-1"><button id="btnFind" class="btn btn-primary btn-md" type="button"><i class="glyphicon glyphicon-search"></i>Search</button></div>
            <div class="col-sm-2">Revision No :</div>
            <div class="col-sm-2"><input type="text" id="RevisionNo" name="RevisionNo" placeholder="Auto" class="form-control" readonly /></div>
            <div class="col-sm-1">Price Type</div>
            <div class="col-sm-2">
                <select id="PriceType" class="txtBox" disabled="disabled">
                    <option selected value="New">New</option>
                    <option value="Revised">Revised</option>
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">Price Change Type :</div>
            <div class="col-sm-2">
                <select id="PriceChangeType" class="txtBox">
                    <option value="">--N/A--</option>
                    <option  value="Increase">Increase</option>
                    <option value="Decrease">Decrease</option>
                </select>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-2">Price Category :</div>
            <div class="col-sm-2">
                <select id="PriceCategory" class="txtBox">
                    <option value="">--N/A--</option>
                    <option value="IP">IP</option>
                    <option value="MRP">MRP</option>
                </select>
            </div>
            <div class="col-sm-2">
                <button id="btnRevision" class="btn btn-primary btn-md" type="button"><i class="glyphicon glyphicon-plus"></i>Revised</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-2">Company Code : </div>
            <div class="col-sm-2">
                <input type="text" id="CompanyCode" name="CompanyCode" class="form-control txtBox" readonly />
            </div>
            <div class="col-sm-2">Company Name & LicenseNo :</div>
            <div class="col-sm-4"><input type="text" id="CompanyName" name="CompanyName" class="form-control" readonly /></div>
            <div class="col-sm-2"><input type="text" id="LicenseNo" name="LicenseNo" class="form-control" readonly /></div>
        </div>
    </div>
    <div class="form-group">
        <fieldset class="panel-border">
            <legend class="panel-border">Product Information :</legend>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">Product Code : </div>
                    <div class="col-sm-2">
                        <input type="text" id="ProductCode" name="ProductCode" class="form-control txtBox" readonly />
                    </div>
                    <div class="col-sm-2">SAP Code :</div>
                    <div class="col-sm-2"><input type="text" id="SAPProductCode" name="SAPProductCode" class="form-control" readonly /></div>
                    <div class="col-sm-2">Pack Size :</div>
                    <div class="col-sm-2"><input type="text" id="PackSizeName" name="PackSizeName" class="form-control" readonly /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">Dosage Form : </div>
                    <div class="col-sm-2">
                        <input type="text" id="DosageFormName" name="DosageFormName" class="form-control txtBox" readonly />
                    </div>
                    <div class="col-sm-2">DAR No :</div>
                    <div class="col-sm-2"><input type="text" id="DarNo" name="DarNo" class="form-control" readonly /></div>
                    <div class="col-sm-2">Brand Name :</div>
                    <div class="col-sm-2"><input type="text" id="BrandName" name="BrandName" class="form-control" readonly /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">Generic Name & Strength : </div>
                    <div class=" col-sm-10">
                        <textarea class="form-control" id="GenAndStrength" name="GenAndStrength" placeholder="Generic Name and Strength" rows="2" readonly></textarea>
                    </div>
                </div>
            </div>
        </fieldset>
    </div>
    <div class="form-group" id="divRenew">
        <fieldset class="panel-border">
            <legend class="panel-border">Revision Info :</legend>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1"> </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Receive Date : </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" class="form-control txtBox" id="ReceivedDate" name="ReceivedDate" disabled placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Submission Date : </div>
                    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control" id="PriceSubmissionDate" name="PriceSubmissionDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                    <div class="col-sm-1"> </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1"> </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Approval Date : </div>
                    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control" id="ApprovalDate" name="ApprovalDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Approved Price : </div>
                    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                        <input type="text" class="form-control" id="UnitPrice" name="UnitPrice" placeholder="2ml:4.5,3ml:6.66">
                    </div>
                    <div class="col-sm-1"> </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1"> </div>
                    <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Launching Date : </div>
                    <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control" id="LaunchingDate" name="LaunchingDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                    <div id="divHighestPrice">
                        <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Highest Price : </div>
                        <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                            <input type="text" class="form-control" id="HighestPrice" name="HighestPrice" maxlength="100" placeholder="">
                        </div>
                    </div>
                    <div class="col-sm-1"> </div>
                </div>
            </div>
        </fieldset>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-2">Proposed By :</div>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="PriceProposedBy" maxlength="30" name="PriceProposedBy">
                </div>
                <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Entry Date : </div>
                <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                    <input type="text" class="form-control" id="SetOn" name="SetOn" readonly>
                </div>
                <div class="col-sm-1"></div>
            </div>

        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1"></div>
                <div class="col-sm-2">Remarks :</div>
                <div class="col-sm-8">
                    <textarea class="form-control" id="PriceRemarks" name="PriceRemarks" placeholder="Remarks" rows="1"></textarea>
                </div>
                <div class="col-sm-1"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <fieldset class="panel-border">
                    <legend class="panel-border">Upload Documents :</legend>
                    <div class="row">
                        <div class="col-sm-2">
                            Document Name<span style="color: red">*</span>:
                        </div>
                        <div class="col-sm-3">
                            <select id="RefNo" class="form-control txtBox" tabindex="" name="RefNo">
                               
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <input type="file" class="txtBox" id="UploadFile" name="UploadFile" />
                            <i class="glyphicon glyphicon-upload form-control-feedback"></i>
                        </div>
                        <div class="col-sm-3">
                        </div>
                    </div>
                    <div class="row">
                        <br />
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <label>List of Document File</label>
                            <div id="FileGrid" class=""></div>
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
        </div>
        <div class="col-sm-4">
            <a class="btn btn-primary btn-md" href='@Url.Action("frmProductPriceView", "ProductPrice")'>Click here to display All Report</a>
        </div>
    </div>
</div>
<div class="box-footer">@*Form Footer*@</div>
<div class="row">
    <div id="DisplayPopupWindow" class="PopupWindowLayout" style="display: none;">
        <div id="DisplayPopupWindowGrid" class="PopUpGrid"></div>
    </div>

    <div id="AnnexureWindow" class="PopupWindowLayout" style="display: none;">
        <div id="AnnexureWindowGrid" class="PopUpGrid"></div>
    </div>
</div>
<div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
        top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
        opacity: .8; filter: alpha(opacity=70);display:none">
    <p style="position: absolute; top: 50%; left: 42%; color: White;">
        Please wait... <img src="../../Content/Images/ajax-loader1.gif">
    </p>
</div>
<script type="text/javascript">

    $('#btnReset').click(function () {
        ResetData();
        $('#btnFind').removeAttr('disabled');
        $("#FileGrid").data("kendoGrid").dataSource.data([]);
        $("#PriceType ").val('New');
    });
    $('#btnRevision').click(function () {
        $('#ID').val('');
        $('#RevisionNo').val('');
        $("#PriceType ").val('Revised');
        $("#divRenew").find('input, textarea, select').val('');
        $("#FileGrid").data("kendoGrid").dataSource.data([]);
    });

    $("#PriceCategory").change(function () {
        var pCategory = $("#PriceCategory").val();
        if (pCategory == "MRP") {
            $("#divHighestPrice").show();
        }
        else {
            $("#divHighestPrice").hide();
        }
    });
    function CheckPagePartAccessPrivilege() {

        switch ('@ViewBag.PageAccess') {
            case "A":
                var options = new Array();
                options.push('<option  value="">--Select Any--</option>');
                options.push('<option  value="Block List">Block List</option>');
                options.push('<option  value="Invoice">Invoice</option>');
                options.push('<option  value="In House Approval">In House Approval</option>');
                options.push('<option  value="Justification">Justification</option>');
                options.push('<option  value="Price Certificate">Price Certificate</option>');
                $("#RefNo").html(options.join(''));
                break;
            case "P":
                var options = new Array();
                options.push('<option  value="">--Select Any--</option>');
                options.push('<option  value="Block List">Block List</option>');
                options.push('<option  value="Invoice">Invoice</option>');
                options.push('<option  value="In House Approval">In House Approval</option>');
                options.push('<option  value="Justification">Justification</option>');
                $("#RefNo").html(options.join(''));
                break;
        }
    }
    $(document).ready(function () {
        CheckUnSavedData();
        CheckPagePartAccessPrivilege();
       // EventPermission();
        $('.input-group.date').datepicker({
            format: "d/mm/yyyy",//dd M yyyy
            // daysOfWeekDisabled: "5,6",
            autoclose: true,
            todayHighlight: true
            //,todayBtn: true,
        });
        $('#btnView').click(function () {

            DisplayPopupWindow.open();

            $.ajax({
                url: '@Url.Action("GetAllInfo", "ProductPrice")',
                method: 'get',
                data: 'json',
                success: function (data) {
                    if (data != "") {
                        $('#DisplayPopupWindowGrid').data('kendoGrid').dataSource.data(data);
                    }
                    else {
                        DisplayPopupWindow.close();
                        AcknowledgeMsg();
                    }

                }
            });

        });

        //Initializing Main page details Kendo Grid Colums
        var PopupGrid = $('#DisplayPopupWindowGrid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                batch: true,
                schema: {
                    model: {
                        id: "ID",
                        fields: {
                            ID: { type: "string" },
                        }
                    }
                },
                pageSize: 20,
            }),
            pageable: {
                //refresh: true,
                pageSizes: true, buttonCount: 5
            },
            scrollable: true,
            sortable: true,
            filterable: true,
            editable: false,
            selectable: "row",
            //selectable: "multiple",
            toolbar: ["excel",{ template: "<input type='text' id='txtPopupInput'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            excel: {
                fileName: "Export.xlsx",
                allPages: true,
                filterable: true
            },
            navigatable: true,
            height: "100%",
            // groupable: true,
            groupable: { messages: { empty: "Custom message text" } },
            columnMenu: true,
            reorderable: true,
            resizable: true,
            columns: [
                 { field: "ID", hidden: true },
                 { field: "AnnexureNo", title: "AnnexureNo", width: 120 },
                 { field: "ProductCode", title: "ProductCode", width: 120 },
                 { field: "RevisionNo", title: "RevisionNo", width: 120 },
                 { field: "SAPProductCode", title: "SapCode", width: 120 },
                 { field: "CompanyCode", title: "CompCode", width: 120 },
                 { field: "CompanyName", title: "CompanyName", width: 140 },
                 { field: "BrandName", title: "BrandName", width: 120 },
                 { field: "GenAndStrength", title: "GenericAndStrength", width: 360 },
                 { field: "PriceType", title: "PriceType", width: 120 },
                 { field: "PriceChangeType", title: "ChangeType", width: 120 },
                 { field: "ReceivedDate", title: "ReceivedDate", width: 120 },
                 { field: "PriceSubmissionDate", title: "SubmissionDate", width: 120 },
                 { field: "ApprovalDate", title: "ApprovalDate", width: 120 },
                 { field: "PriceProposedBy", title: "ProposedBy", width: 120 }
            ]

        }).data('kendoGrid');

        $('#DisplayPopupWindowGrid').dblclick(function () {
            var grid = $(this).data('kendoGrid');
            var selectRow = grid.dataItem(grid.select());
            DisplayPopupWindow.close();
            SetMasterData(selectRow);
            $('#btnFind').attr('disabled', 'disabled');
            if (selectRow.PriceCategory == "MRP") {
                $("#divHighestPrice").show();
            }
            else {
                $("#divHighestPrice").hide();
            }
            $.ajax({
                url: '@Url.Action("GetFileByRefId", "ProductPrice")',
                type: 'GET',
                data: { refLevel1: selectRow.ID },
                success: function (data) {
                    $("#FileGrid").data("kendoGrid").dataSource.data(data);
                }
            });
        });

        //Produc Name wise Filter table row
        $("#txtPopupInput").keyup(function () {
            var val = $(this).val();
            $("#DisplayPopupWindowGrid").data("kendoGrid").dataSource.filter({
                logic: "or",
                filters: [
                     { field: "AnnexureNo", operator: "contains", value: val },
                     { field: "ProductCode", operator: "contains", value: val },
                     { field: "SAPProductCode", operator: "contains", value: val },
                     { field: "RevisionNo", operator: "contains", value: val },
                     { field: "CompanyCode", operator: "contains", value: val },
                     { field: "CompanyName", operator: "contains", value: val },
                     { field: "BrandName", operator: "contains", value: val },
                     { field: "GenAndStrength", operator: "contains", value: val },
                     { field: "PriceType", operator: "contains", value: val },
                     { field: "PriceChangeType", operator: "contains", value: val },
                     { field: "PriceSubmissionDate", operator: "contains", value: val },
                     { field: "ApprovalDate", operator: "contains", value: val },
                     { field: "PriceProposedBy", operator: "contains", value: val }
                ]
            });
        });

        //Display window
        var DisplayPopupWindow = $("#DisplayPopupWindow").kendoWindow({
            actions: ["Minimize", "Maximize", "Close"],
            width: "90%",
            height: "80%",
            draggable: true,
            modal: true,
            title: "List of Record."
        }).data("kendoWindow").center();

        // Start Annexure window for find button
        var AnnexureWindow = $("#AnnexureWindow").kendoWindow({
            actions: ["Minimize", "Maximize", "Close"],
            width: "100%",
            height: "80%",
            draggable: true,
            modal: true,
            title: "List of Annexure"
        }).data("kendoWindow").center();

        $('#btnFind').click(function () {
            AnnexureWindow.open();
            $.ajax({
                url: '@Url.Action("GetAllProductFromAnnex", "ProductPrice")',
                method: 'get',
                data: 'json',
                success: function (data) {
                    if (data != "") {
                        $('#AnnexureWindowGrid').data('kendoGrid').dataSource.data(data);
                    }
                    else {
                        AnnexureWindow.close();
                        AcknowledgeMsg();
                    }
                }
            });
        });
        //Initializing Main page details Kendo Grid Colums
        var annexureGrid = $('#AnnexureWindowGrid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                batch: false,
                schema: {
                    model: {
                        id: "AnnexId",
                        fields: {
                            AnnexId: { type: "string" },
                        }
                    }
                },
                pageSize: 10,
            }),
            pageable: {
                //refresh: true,
                pageSizes: true, buttonCount: 10
            },
            scrollable: true,
            sortable: true,
            filterable: true,
            editable: false,
            selectable: "row",
            //selectable: "multiple",
            toolbar: [{ template: "<input type='text' id='txtAnnexureKeyword'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            navigatable: true,
            height: 430,
            // groupable: true,
            groupable: { messages: { empty: "Custom message text" } },
            columnMenu: true,
            reorderable: true,
            resizable: true,
            columns: [
                 { field: "AnnexId", hidden: true },
                 { field: "AnnexureNo", title: "AnnexureNo", width: 120 },
                 { field: "ProductCode", title: "ProductCode", width: 120 },
                 { field: "AnnexRevisionNo", title: "RevisionNo", width: 120 },
                 { field: "SAPProductCode", title: "SAPCode", width: 120 },
                 { field: "DarNo", title: "DARNo", width: 120 },
                 { field: "BrandName", title: "BrandName", width: 120 },
                 { field: "CompanyCode", title: "CompCode", width: 120 },
                 { field: "CompanyName", title: "CompanyName", width: 140 },
                 { field: "GenAndStrength", title: "GenericAndStrength", width: 360 },
                 { field: "ProposedBy", title: "ProposedBy", width: 120 },
                 { field: "SubmissionDate", title: "SubmissionDate", width: 120 },
                 { field: "AnnexStatus", title: "AnnexStatus", width: 120 },
                 { field: "InclusionDate", title: "InclusionDate", width: 120 },
                 { field: "ValidUptoDate", title: "ValidUpto", width: 120 }
            ]

        }).data('kendoGrid');

        $('#AnnexureWindowGrid').dblclick(function () {
            var grid = $(this).data('kendoGrid');
            var selectRow = grid.dataItem(grid.select());
            AnnexureWindow.close();
            SetMasterData(selectRow);
            changeAny = 1;
        });

        //Annexure Name wise Filter table row
        $("#txtAnnexureKeyword").keyup(function () {
            var val = $(this).val();
            $("#AnnexureWindowGrid").data("kendoGrid").dataSource.filter({
                logic: "or",
                filters: [
                     { field: "AnnexureNo", operator: "contains", value: val },
                     { field: "ProductCode", operator: "contains", value: val },
                     { field: "SAPProductCode", operator: "contains", value: val },
                     { field: "BrandName", operator: "contains", value: val },
                     { field: "CompanyCode", operator: "contains", value: val },
                     { field: "CompanyName", operator: "contains", value: val },
                     { field: "GenAndStrength", operator: "contains", value: val },
                     { field: "ProductCode", operator: "contains", value: val },
                     { field: "InclusionDate", operator: "contains", value: val },
                     { field: "ValidUptoDate", operator: "contains", value: val },
                     { field: "DarNo", operator: "contains", value: val },
                     { field: "ProposedBy", operator: "contains", value: val }
                ]
            });
        });

        //End Price

        //To Define Data  for Kendo Grid
        var fileDataSource = new kendo.data.DataSource({
            batch: true,
            schema: {
                model: {
                    id: "FileID",
                    fields: {
                        FileID: { editable: false },
                        FileCode: { editable: false },
                        Extention: { editable: false },
                        FileName: { editable: false },
                        RefNo: { editable: false },
                        FileSize: { editable: false },
                        SetOn: { editable: false },
                        SetByName: { editable: false }
                    }
                }
            },
            pageSize: 10
        });

        //Initializing Main page details Kendo Grid Colums
        var grid = $('#FileGrid').kendoGrid({
            dataSource: fileDataSource,
            pageable: {
                pageSizes: true, buttonCount: 5
            },
            scrollable: true,
            sortable: true,
            filterable: true,
            editable: true,
            width: "95%",
            selectable: "row",
            toolbar: [{ template: "<input type='text' id='txtInput'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            navigatable: true,
            groupable: true,
            columnMenu: true,
            reorderable: true,
            resizable: true,
            columns: [
            { field: "FileID", hidden: true },
            { field: "FileCode", hidden: true },
            { field: "Extention", hidden: true },
            { field: "RefNo", title: "Document Name", width: 150, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } },
            { field: "FileName", title: "File Name", width: 350, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } },
            { field: "FileSize", filterable: false, title: "Size(MB)", width: 100, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } },
            { command: [{ name: "Download", text: "Download", imageClass: "glyphicon glyphicon-download", click: handleDownload }], title: "Download Action", width: "120px", attributes: { "class": "btnDownload" }, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } },
            { command: [{ name: "Delete", text: "Delete", imageClass: "glyphicon glyphicon-trash", click: handleFileDelete }], title: "Delete Action", width: "120px", attributes: { "class": "btnDelete" }, headerAttributes: { "class": "gridHeader", style: "font-weight: bold;font-size: 13px;" } }
            ]

        }).data('kendoGrid');

        $("#txtInput").keyup(function () {
            var val = $(this).val();
            $("#FileGrid").data("kendoGrid").dataSource.filter({
                logic: "or",
                filters: [
                     { field: "RefNo", operator: "contains", value: val },
                     { field: "FileName", operator: "contains", value: val },
                     { field: "FileSize", operator: "contains", value: val }
                ]
            });
        });

        function handleFileDelete(event) {
            dataItemInfo = grid.dataItem($(event.currentTarget).closest("tr"));

            if (confirm('Do you really want to delete this file?')) {
                $.ajax({
                    url: '@Url.Action("DeleteFile", "General")',
                    type: 'POST',
                    data: JSON.stringify({ "fileId": dataItemInfo.FileID, "fileCode": dataItemInfo.FileCode, "extention": dataItemInfo.Extention }),
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    cache: false,
                    success: function (response) {
                        if (response.Status == "Yes") {
                            toastr.success(OperationMsg("FD"));
                            $("#FileGrid").data("kendoGrid").dataSource.remove(dataItemInfo);
                        }
                        else {
                            toastr.error(OperationMsg("FND"));
                        }
                    }
                });
            }
        };
        // Download Button in Grid
        function handleDownload(event) {
            dataItemInfo = grid.dataItem($(event.currentTarget).closest("tr"));
            window.location.href = '@Url.Action("Download", "General")' + '?path=' + dataItemInfo.FileCode + dataItemInfo.Extention + '&fileName=' + dataItemInfo.FileName + '&fileId=' + dataItemInfo.FileID;
        };

        $('#btnSave').click(function () {
            if (changeAny == 1) {
                var checkInput = InputValidation('AnnexId');
                if (checkInput == 0) {
                    model.ID = $('#ID').val();
                    model.AnnexId = $('#AnnexId').val();
                    model.RevisionNo = $('#RevisionNo').val();
                    model.PriceProposalDate = $('#PriceProposalDate').val();
                    model.ReceivedDate = $('#ReceivedDate').val();
                    model.PriceSubmissionDate = $('#PriceSubmissionDate').val();
                    model.ApprovalDate = $('#ApprovalDate').val();
                    model.PriceType = $('#PriceType').val();
                    model.PriceCategory = $('#PriceCategory').val();
                    model.PriceChangeType = $('#PriceChangeType').val();
                    model.UnitPrice = $('#UnitPrice').val();
                    model.HighestPrice = $('#HighestPrice').val();
                    model.PriceProposedBy = $('#PriceProposedBy').val();
                    model.PriceRemarks = $('#PriceRemarks').val();
                    model.LaunchingDate = $('#LaunchingDate').val();
                    $.ajax({
                        url: '@Url.Action("frmProductPrice", "ProductPrice")',
                        data: JSON.stringify(model),
                        type: 'POST',
                        contentType: 'application/json;',
                        dataType: 'json',
                        success: function (data) {
                            if (data.Status == "Yes") {
                                $("#ID").val(data.ID);
                                $("#RevisionNo").val(data.RevisionNo);
                                OperationMsg(data.Mode);
                                changeAny = 0;
                            }
                            else {
                                ErrorFrmServerMsg(data.Status);
                            }

                        }
                    }); //End of ajax call
                }
                else {
                    ValidationMsg();
                }
            }
            else {
                toastr.warning(OperationMsg("NC"));
            }
        });
        var model = { "ID": "", "AnnexId": "", "RevisionNo": "", "PriceProposalDate": "", "ReceivedDate": "", "PriceSubmissionDate": "", "ApprovalDate": "", "PriceType": "", "PriceCategory": "", "PriceChangeType": "", "UnitPrice": "", "HighestPrice": "", "PriceProposedBy": "", "PriceRemarks": "" };
        var dataItemInfo = {};

    });

    //$('#image-file').bind('change', function ()
    $('#UploadFile').on('change', function (e) {
        var checkInput = InputValidation('RefNo');

        if (checkInput == 0) {
            var files = e.target.files;
            var refId = $("#ID").val();
            if (refId != "") {
                var fileSize = 0;
                var fSizeStrg = "";
                $file = $("#UploadFile");
                for (var f = 0; f < files.length; f++) {
                    var iSize = ($file[0].files[f].size / 1024);
                    fileSize = (Math.round((iSize / 1024) * 100) / 100);
                    if (fSizeStrg != "") {
                        fSizeStrg += ',' + fileSize;
                    }
                    else {
                        fSizeStrg = fileSize;
                    }
                    if (iSize / 1024 > 25) {
                        iSize = (Math.round((iSize / 1024) * 100) / 100);
                        alert('File size is ' + iSize + ' MB');
                        $("#divLoading").show();
                        if (iSize > 25) {
                            toastr.warning(OperationMsg("UFW"));
                            $("#divLoading").hide();
                            return;
                        }
                    }
                }
                if (files.length > 0) {
                    if (window.FormData !== undefined) {
                        var data = new FormData();
                        for (var x = 0; x < files.length; x++) {
                            data.append("file" + x, files[x]);
                        }
                        $("#divLoading").show();
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("UploadFile", "ProductPrice")' + '?refLevel1=' + refId + '&refLevel2=' + "" + '&fileSize=' + fSizeStrg + '&refNo=' + $("#RefNo").val(),
                            contentType: false,
                            processData: false,
                            data: data,
                            success: function (result) {
                                $("#divLoading").hide();
                                if (result.msgType == "FUS") {
                                    toastr.success(OperationMsg(result.msgType));
                                    $("#FileGrid").data("kendoGrid").dataSource.data(result.FileList);
                                    $("#RefNo").val('--Select Any--');
                                    $("#ReceivedDate").val(result.ReceiveDate);
                                }
                                else if (result.msgType == "FLI") {
                                    toastr.warning(OperationMsg(result.msgType));
                                }
                                else {
                                    toastr.warning(OperationMsg(result.msgType));
                                }
                            }

                        });
                    } else {
                        alert("This browser doesn't support HTML5 file uploads!");
                    }
                }
            }
            else {
                toastr.warning(OperationMsg("FI"));
            }
        }
        else {
            toastr.error(OperationMsg("SDN"));
        }

    });
</script>
