@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
<link href="~/Content/CustomCSS/InputText.css" rel="stylesheet" />


<div class="box-header with-border">
    <div class="col-lg-8"> <div id="MessageText"></div></div>
    <div class="col-lg-4">
        <div style="text-align:right;">
            <button id="btnSave" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-save"></i>Save</button>
            <button id="btnView" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-search"></i>Search</button>
            <button id="btnReset" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-refresh"></i>Reset</button>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <fieldset class="panel-border">
            <legend class="panel-border">Company Information :</legend>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Company Code<span style="color: red">*</span></div>
                    <div class="col-lg-2"><input type="text" id="CompanyCode" name="CompanyCode" readonly="readonly" class="RequiredField form-control" /></div>
                    <div class="col-lg-1"><button id="btnFindCom" class="btn btn-primary btn-sm" type="button"><i class="glyphicon glyphicon-search"></i>Search</button></div>
                    <div class="col-lg-2">
                        <input type="hidden" id="ID" name="ID" placeholder="ID" class="txtBox form-control" />
                    </div>
                    <div class="col-lg-2">Revision No</div>
                    <div class="col-lg-2"><input type="text" id="RevisionNo" name="RevisionNo" readonly="readonly" placeholder="Auto" class="RequiredField form-control" /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Company Name</div>
                    <div class="col-lg-9"><input type="text" id="CompanyName" name="CompanyName" readonly="readonly" class="RequiredField form-control" /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Address</div>
                    <div class="col-lg-9"><input type="text" id="Address" name="Address" readonly="readonly" class="RequiredField form-control" /></div>
                </div>
            </div>

        </fieldset>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <fieldset class="panel-border">
            <legend class="panel-border">Product Information :</legend>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Product Code<span style="color: red">*</span></div>
                    <div class="col-lg-2"><input type="text" maxlength="50" id="ProductCode" name="ProductCode" readonly="readonly" class="RequiredField form-control" /></div>
                    <div class="col-lg-1"><button id="btnFindProd" class="btn btn-primary btn-sm" type="button"><i class="glyphicon glyphicon-search"></i>Search</button></div>
                    <div class="col-lg-2"></div>
                    <div class="col-lg-2">SAP Product Code</div>
                    <div class="col-lg-2"><input type="text" maxlength="50" id="SapProductCode" name="SapProductCode" readonly="readonly" class="RequiredField form-control" /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Generic and Strength</div>
                    <div class="col-lg-9"><textarea id="GenericStrength" name="GenericStrength" readonly="readonly" class="RequiredField form-control"> </textarea></div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Pack Size</div>
                    <div class="col-lg-3"><input type="text" maxlength="50" id="PackSize" name="PackSize" readonly="readonly" class="RequiredField form-control" /></div>
                    <div class="col-lg-1"></div>
                    <div class="col-lg-2">Dosage Form</div>
                    <div class="col-lg-3"><input type="text" maxlength="50" id="DosageForm" name="DosageForm" readonly="readonly" class="RequiredField form-control" /></div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">DAR No</div>
                    <div class="col-lg-3"><input type="text" maxlength="50" id="DarNo" name="DarNo" readonly="readonly" class="RequiredField form-control" /></div>
                    <div class="col-lg-1"></div>
                    <div class="col-lg-2">Brand Name</div>
                    <div class="col-lg-3"><input type="text" maxlength="50" id="BrandName" name="BrandName" readonly="readonly" class="RequiredField form-control" /></div>
                </div>
            </div>
        </fieldset>
    </div>
</div>




<div class="row">
    <div class="col-sm-12">
        <fieldset class="panel-border">
            <legend class="panel-border">Approval & Notification Information :</legend>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Submission Date</div>
                    <div class="col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control txtBox" id="SubmissionDate" name="SubmissionDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                    <div class="col-lg-1"></div>
                    <div class="col-lg-2">Receive Date</div>
                    <div class="col-lg-3">
                        <div class="input-group">
                            <input type="text" class="form-control txtBox" id="ReceiveDate" name="ReceiveDate" disabled placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">

                    <div class="col-lg-2">Approval Date</div>
                    <div class="col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control txtBox" id="ApprovalDate" name="ApprovalDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>

                    <div class="col-lg-1"></div>
                    <div class="col-lg-2">Valid Upto</div>
                    <div class="col-lg-3">
                        <div class="input-group date">
                            <input type="text" class="form-control txtBox" id="ValiduptoDate" name="ValiduptoDate" placeholder="dd/mm/yyyy">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Alarm Days</div>
                    <div class="col-lg-3"><input type="text" maxlength="5" id="NotificationDay" name="NotificationDay" class="txtBox form-control numeric" /></div>
                    <div class="col-lg-1"></div>
                    <div class="col-lg-2">Market Authorization No</div>
                    <div class="col-lg-3"><input type="text" maxlength="150" id="MarketAuthorizationNo" name="MarketAuthorizationNo" class="txtBox form-control" /></div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-lg-2">Remarks</div>
                    <div class="col-lg-9"><textarea id="Remarks" name="Remarks" class="RequiredField form-control"> </textarea></div>
                </div>
            </div>
        </fieldset>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <fieldset class="panel-border">
            <legend class="panel-border">Upload Documents :</legend>
            <div class="row">
