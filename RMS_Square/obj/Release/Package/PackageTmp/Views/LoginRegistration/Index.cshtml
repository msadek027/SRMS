@{
    Layout = null;
    ViewBag.Title = "frmLogin";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Regulatory Management System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="@Url.Content("~/Content/Login/css/style.css" )" rel="stylesheet" />
    <style>
        .main-footer {
            margin-top: 40px;
            color: #444;
            border-top: 2px solid #d2d6de;
        }

        a {
            color: #18392b;
            font-size: 20px;
            text-decoration: none;
        }

        .main-footer {
            color: #000;
        }
    </style>
    
   
</head>

<body style="background: url('../Content/Images/bg_img.jpg');">
    <script src="@Url.Content("~/Scripts/LogIn/js/index.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/LogIn/js/effect.js")" type="text/javascript"></script>

   
    <div class="wrapper">
        <div class="container">
            <h1>Welcome to Square Regulatory Management System</h1>
            @using (Html.BeginForm("CheckUser", "LoginRegistration"))
            {
                @Html.ValidationSummary(true)
                if (!string.IsNullOrEmpty(ViewBag.msg))
                {
                    <p style="color:red; text-shadow:1px 0px 0px green;">
                        @ViewBag.msg
                    </p>
                }
                <form class="form">
                    <input id="UserID" name="UserID" type="text" placeholder="Enter Username" required>
                    <input id="Password" name="Password" type="password" placeholder="Enter Password" required>
                    <button type="submit" id="btnLogin">Login</button>
                </form>
            }

            <footer class="main-footer">
                <strong>Copyright &copy;@DateTime.Now.Year <a href="http://www.e-home2u.com/">SQUARE InformatiX Limited</a>.</strong> All rights
                reserved.
            </footer>
        </div>
        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
</body>

</html>



  