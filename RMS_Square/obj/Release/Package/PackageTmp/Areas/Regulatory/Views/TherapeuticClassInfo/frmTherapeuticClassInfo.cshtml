@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/AdminLTE/plugins/jQuery/jquery-2.2.3.min.js"></script>
<link href="~/Content/CustomCSS/InputText.css" rel="stylesheet" />

<script type="text/javascript">
    $(document).ready(function () {

        EventPermission();
        $('#btnReset').click(function () {
            ResetData();
            $('#Status').val('Active');
        });


        $('#btnView').click(function () {

            PopupWindow.open();

            $.ajax({
                url: '/TherapeuticClassInfo/GetTherapeuticClass',
                method: 'get',
                data: 'json',
                success: function (data) {
                    if (data != "") {
                        $('#PopupWindowGrid').data('kendoGrid').dataSource.data(data);
                    }
                    else {
                        PopupWindow.close();
                        AcknowledgeMsg();
                    }

                },
                error: function () {
                    alert('Error occured!');
                },
                //complete: function () { },
            });

        });

        //Initializing Main page details Kendo Grid Colums
        var PopupGrid = $('#PopupWindowGrid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                batch: true,
                schema: {
                    model: {
                        id: "TherapeuticClassCode",
                        fields: {
                            TherapeuticClassCode: { type: "string" },
                        }
                    }
                },
                pageSize: 10,
            }),
            pageable: {
                //refresh: true,
                pageSizes: true, buttonCount: 5
            },
            scrollable: true,
            sortable: true,
            filterable: true,
            editable: false,
            selectable: "row",
            //selectable: "multiple",
            toolbar: ["excel",{ template: "<input type='text' id='txtPopupInput'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            excel: {
                fileName: "Export.xlsx",
                allPages: true,
                filterable: true
            },
            navigatable: true,
            height: 430,
            // groupable: true,
            groupable: { messages: { empty: "Custom message text" } },
            columnMenu: true,
            reorderable: true,
            resizable: true,
            columns: [
                 { field: "TherapeuticClassCode", title: "TherapeuticClassCode", width: 80 },
                 { field: "TherapeuticClassName", title: "TherapeuticClassName", width: 100 },
                 { field: "Status", title: "Status", width: 80 }

            ]

        }).data('kendoGrid');

        $('#PopupWindowGrid').dblclick(function () {
            var grid = $(this).data('kendoGrid');
            var selectRow = grid.dataItem(grid.select());
            PopupWindow.close();
            SetMasterData(selectRow);
        });

        //Produc Name twise Filter table row
        $("#txtPopupInput").keyup(function () {
            var val = $(this).val();
            $("#PopupWindowGrid").data("kendoGrid").dataSource.filter({
                logic: "or",
                filters: [
                     { field: "TherapeuticClassCode", operator: "contains", value: val },
                     { field: "TherapeuticClassName", operator: "contains", value: val },
                     { field: "Status", operator: "contains", value: val },
                ]
            });
        });

        $('#btnSave').click(function () {
            var Input = InputValidation('TherapeuticClassName');

            if (Input == 0) {
                master.TherapeuticClassCode = $('#TherapeuticClassCode').val();
                master.TherapeuticClassName = $('#TherapeuticClassName').val();
                master.Status = $('#Status').val();;
                $.ajax({
                    url: '/TherapeuticClassInfo/frmTherapeuticClassInfo',
                    data: JSON.stringify(master),
                    type: 'POST',
                    contentType: 'application/json;',
                    dataType: 'json',
                    success: function (data) {
                        if (data.Status == "Yes") {
                            $("#TherapeuticClassCode").val(data.ID);
                            OperationMsg(data.Mode);
                        }
                        else {
                            ErrorFrmServerMsg(data.Status);
                        }

                    },
                    error: function () { ErrorFrmClientMsg(); },

                });
            }
            else {
                ValidationMsg();
            }

        });
        var master = { "TherapeuticClassCode": "", "TherapeuticClassName": "", "Status": "" };
    });
</script>
<div class="box-header with-border">
    @*Form Title*@
    <div class="col-lg-8"> <div id="MessageText"></div></div>
    <div class="col-lg-4">
        <div style="text-align:right;">
            <button id="btnSave" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-save"></i>Save</button>
            <button id="btnView" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-search"></i>Search</button>
            <button id="btnReset" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-refresh"></i>Reset</button>
            @*<button id="btnDelete" class="btn btn-primary btn-lg" type="button"><i class="glyphicon glyphicon-trash"></i>Delete</button>*@
        </div>
    </div>
</div>
<div class="box-body">
    @*Form Body Content*@
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Therapeutic Class Code</div>
            <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3"><input type="text" maxlength="50" id="TherapeuticClassCode" name="TherapeuticClassCode" placeholder="Therapeutic Class Code (Auto Generated)" readonly="readonly" class="RequiredField form-control" /></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Therapeutic Class Name</div>
            <div class="col-xs-0 col-sm-0 col-md-6 col-lg-6"><input type="text" maxlength="100" id="TherapeuticClassName" name="TherapeuticClassName" placeholder="Therapeutic Class Name" class="RequiredField form-control" /></div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-2 col-lg-2">Status</div>

            <div class="col-xs-0 col-sm-0 col-md-3 col-lg-3">
                <select class="form-control dropDownList" id="Status" name="Status">
                    <option value="Active" selected>Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="box-footer">@*Form Footer*@</div>
<div class="row">
    <div id="PopupWindow" class="PopupWindowLayout" style="display: none;">
        <div id="PopupWindowGrid" class="PopUpGrid"></div>
    </div>
</div>
