        $('#RevisionNo').val('');
        $("#divRenew").find('input, textarea, select').val('');
        $("#FileGrid").data("kendoGrid").dataSource.data([]);
    });
    function CheckPagePartAccessPrivilege() {

        switch ('@ViewBag.PageAccess') {
            case "A":
                var options = new Array();
                options.push('<option  value="">--Select Any--</option>');
                options.push('<option  value="Local Document">Local Document</option>');
                options.push('<option  value="DCC Document">DCC Document</option>');
                options.push('<option  value="Import Document">Import Document</option>');
                options.push('<option  value="Approval Document">Approval Document</option>');
                options.push('<option  value="Inspection Document">Inspection Document</option>');
                $("#RefNo").html(options.join(''));
                break;
            case "P":
                var options = new Array();
                options.push('<option  value="">--Select Any--</option>');
                options.push('<option  value="Local Document">Local Document</option>');
                options.push('<option  value="DCC Document">DCC Document</option>');
                options.push('<option  value="Import Document">Import Document</option>');
                $("#RefNo").html(options.join(''));
                break;
        }
    }
    function DisplayPageView() {
        $("#divImportInfo").hide();
        $("#divInspection").hide();
        $("#MeetingType").change(function () {
            var mType = $("#MeetingType").val();
            if (mType == "Local") {
                document.getElementById("lgMeetingType").innerHTML = "Local :";
                $("#divLocal").show();
            }
            else {
                document.getElementById("lgMeetingType").innerHTML = "DCC :";
                $("#divLocal").show();
            }
        });
        $("#ApprovalStatus").change(function () {
            var appStatus = $("#ApprovalStatus").val();
            if (appStatus == "Inspection") {
                $("#divInspection").show();
            }
            else {
                $("#divInspection").hide();
            }
        });

        $("#ManufacturerType").change(function () {
            var mType = $("#ManufacturerType").val();
            if (mType == "Import") {
                $("#divImportInfo").show();
            }
            else {
                $("#divImportInfo").hide();
            }
        });
    }

    $(document).ready(function () {
        CheckUnSavedData();
        DisplayPageView();
        CheckPagePartAccessPrivilege();
        // EventPermission();
        $('.input-group.date').datepicker({
            format: "d/mm/yyyy",//dd M yyyy
            // daysOfWeekDisabled: "5,6",
            autoclose: true,
            todayHighlight: true
            //,todayBtn: true,
        });
        //To Define Data  for License info Kendo Grid
        var licenseInfoDataSource = new kendo.data.DataSource({
            batch: true,
            schema: {
                model: {
                    id: "ID",
                    fields: {
                        ID: { editable: true }
                    }
                }
            },
            pageSize: 10,
            transport: {
                read: function () {
                    $.ajax({
                        url: '@Url.Action("GetNewComming", "General")', // at first data
                        type: "GET",
                        contentType: 'application/json;',
                        dataType: 'json',
                        success: function (data) {
                            $("#LicenseInfoGrid").data("kendoGrid").dataSource.data(data.dataMaster);
                        }
                    });
                }
            }
        });

        //Initializing Main page details Kendo Grid Colums
        var licenseInfoGrid = $('#LicenseInfoGrid').kendoGrid({
            dataSource: licenseInfoDataSource,
            
            pageable: {
                pageSizes: true, buttonCount: 5
            },
            scrollable: true,
            sortable: true,
            filterable: true,
            editable: true,
            selectable: "row",
            toolbar: ["excel",{ template: "<input type='text' id='txtInputLicense'  style='float:right' placeholder='Search...' class='k-textbox'>" }, ],
            excel: {
                fileName: "Export.xlsx",
                allPages: true,
                filterable: true
            },
            navigatable: true,
            groupable: true,
            columnMenu: true,
            reorderable: true,
            resizable: true,
            columns: [
                 { field: "ID", hidden: true },
                 { field: "SlNo ", title: "RecipeNo", width: 120 },
                 { field: "ProductCode", title: "ProductCode", width: 120 },
                 { field: "RevisionNo", title: "RevisionNo", width: 120 },
                 { field: "SAPProductCode", title: "SAPCode", width: 120 },
                 { field: "BrandName", title: "BrandName", width: 120 },
                 { field: "GenAndStrength", title: "GenAndStrength", width: 360 },
                 { field: "ProductSpecification", title: "ProductSpec", width: 120 },
                 { field: "MeetingType", title: "MeetingType", width: 120 },
                 { field: "ManufacturerType", title: "Manu.Type", width: 120 },
                 { field: "ProposedBy", title: "ProposedBy", width: 120 },
                 { field: "ApprovalStatus", title: "Apv.Status", width: 120 },
                 { field: "ApvSubmissionDate", hidden: true, title: "SubmissionDate", width: 120 },
                 { field: "InspectionDate", hidden: true, title: "InspectionDate", width: 120 },
                 { field: "ApvApprovalDate", title: "ApprovalDate", width: 120 },
                 { field: "ApvValidUptoDate", title: "ValidUpto", width: 120 },
                 { field: "AlarmDays", title: "AlarmDays", width: 100 },
                 { field: "CompanyCode", title: "C.Code", width: 100 },
                 { field: "CompanyName", title: "CompanyName", width: 160 },
            ]
        }).data('kendoGrid');

        $('#btnView').click(function () {
            DisplayPopupWindow.open();
            $.ajax({
                url: '@Url.Action("GetAllInfo", "RecipeInfo")',
                method: 'get',
                data: 'json',
                success: function (data) {
                    if (data != "") {
                        $('#DisplayPopupWindowGrid').data('kendoGrid').dataSource.data(data);
                    }
                    else {
                        DisplayPopupWindow.close();
                        AcknowledgeMsg();
                    }
                }
            });

        });

        //Initializing Main page details Kendo Grid Colums
        var PopupGrid = $('#DisplayPopupWindowGrid').kendoGrid({
            dataSource: new kendo.data.DataSource({
                batch: true,
                schema: {
                    model: {
                        id: "ID",
                        fields: {
                            ID: { type: "string" },
                        }
                    }
                },
                pageSize: 20,
            }),
            pageable: {
                //refresh: true,
                pageSizes: true, buttonCount: 5
            },
            scrollable: true,
            sortable: true,
            //filterable: true,
            filterable: {
                extra: false,
                operators: {
                    string: {
                        startswith: "Starts with",
                        contains: "Contains",
                        isempty: "Is empty",
